<style>
    .card {
        background-image: var(--gradient-horizonzal);
        max-width: 250px;
        min-height: 350px;
        border-radius: 1rem;
        padding: 3px; /* Border thickness */
        box-shadow: var(--theme-soft-shadow);
    }
    .title {
        font-size: 1.1em;
        font-weight: 700;
        background-image: var(--gradient-horizonzal);
        padding: 1rem;
        border-radius: .9rem .9rem 0 0;
        color: white;
    }
    .description {
        padding: 1rem;
        text-align: justify;
    }
    .link {
        background-color: var(--theme-background-color);
        display: block;
        width: 100%;
        height: 100%;
        text-decoration: none;
        text-decoration-color: transparent;
        border-radius: 1rem;
    }
    .link:hover {
        text-decoration: none;
        text-decoration-color: transparent;
    }
    div {
        text-align: center;
        color: var(--theme-text-color);
    }
</style>

<div class="card">
    <a class="link" href={Astro.props.href}>
        <div class="title" transition:name={Astro.props.title}>{Astro.props.title}</div>
        <div class="description">{Astro.props.description}</div>
    </a>
</div>